            android:layout_weight="0.98"
            android:layout_gravity="center_horizontal"
            android:textSize="40dp"
            android:paddingLeft="0dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"/>
    </LinearLayout>
<LinearLayout
