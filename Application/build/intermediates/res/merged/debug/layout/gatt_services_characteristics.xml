<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:measureWithLargestChild="false"
        android:transitionGroup="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:maxLines="1"
                android:gravity="start"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Sensor Information:"
                android:layout_weight="0.98"
                android:textSize="13sp"
                android:paddingStart="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="#dc1e2b"
                android:textColor="#fff"
                android:textStyle="bold"
                android:enabled="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:maxLines="5"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/text_pressure"
                android:text="@string/no_data"
                android:layout_weight="0.98"
                android:layout_gravity="center_horizontal"
                android:textSize="40sp"
                android:paddingStart="0dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:maxLines="5"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/text_temperature"
                android:text="@string/no_data"
                android:layout_weight="0.98"
                android:layout_gravity="center_horizontal"
                android:textSize="40sp"
                android:paddingStart="0dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"/>

        </LinearLayout>

        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_device_address"
                android:textSize="18sp"
                android:textColor="#000000"
                android:visibility="gone" />

            <Space android:layout_width="5dp"
                android:layout_height="wrap_content"/>

            <TextView android:id="@+id/device_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_state"
                android:textSize="18sp"
                android:textColor="#000000"
                android:visibility="gone" />

            <TextView android:id="@+id/connection_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/disconnected"
                android:textSize="18sp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery: "
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginStart="5dp" />

            <Space android:layout_width="5dp"
                android:layout_height="wrap_content"/>

            <TextView android:id="@+id/text_battery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_data"
                android:textSize="17sp" />

        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pressure Range: "
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginLeft="5dp" />

            <Space android:layout_width="5dp"
                android:layout_height="wrap_content"/>

            <TextView android:id="@+id/text_pressureR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_data"
                android:textSize="17sp" />

        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="40px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:maxLines="1"
                android:gravity="start"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Device Information:"
                android:layout_weight="0.98"
                android:textSize="13sp"
                android:paddingLeft="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="#dc1e2b"
                android:textColor="#fff"
                android:textStyle="bold"
                android:enabled="false" />

        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="40px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manufacturer: "
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginLeft="5dp" />

            <Space android:layout_width="5dp"
                android:layout_height="wrap_content"/>

            <TextView android:id="@+id/manufactuer_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_data"
                android:textSize="17sp" />

        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serial Number: "
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginLeft="5dp" />

            <Space android:layout_width="5dp"
                android:layout_height="wrap_content"/>

            <TextView android:id="@+id/serial_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="@string/no_data"
                android:textSize="17sp" />

        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Model Number: "
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginLeft="5dp" />

            <Space android:layout_width="5dp"
                android:layout_height="wrap_content"/>

            <TextView android:id="@+id/model_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_data"
                android:textSize="17sp" />

        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="40px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/gp50"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/imageView"
                android:baselineAlignBottom="true"
                android:adjustViewBounds="true" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>